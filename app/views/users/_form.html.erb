<%= form_with model: user do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username, placeholder: "Type username here..." %>
    <% user.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
  <%= form.label :email %>
  <%= form.text_field :email, placeholder: "Email address" %>
  <% user.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
  <%= form.label :password %>
  <%= form.text_field :password, placeholder: "Password" %>
  <% user.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
  <%= form.submit value="Submit User" %>
  </div>
<% end %>